<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="Player 1: "
            android:textSize="28sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:id="@+id/p1_score_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="28sp"
            android:gravity = "center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="Player 2: "
            android:textSize="28sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:id="@+id/p2_score_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="28sp"
            android:gravity = "center"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Piece:"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Taken:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Piece:"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Taken: "
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Pawn"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP1Pawn"/>
        <TextView
            android:id="@+id/p1pawn_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Pawn"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP2Pawn"/>
        <TextView
            android:id="@+id/p2pawn_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Knight"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP1Knight"/>
        <TextView
            android:id="@+id/p1knight_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Knight"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP2Knight"/>
        <TextView
            android:id="@+id/p2knight_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Bishop"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP1Bishop"/>
        <TextView
            android:id="@+id/p1bishop_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Bishop"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP2Bishop"/>
        <TextView
            android:id="@+id/p2bishop_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Rook"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP1Rook"/>
        <TextView
            android:id="@+id/p1rook_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Rook"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP2Rook"/>
        <TextView
            android:id="@+id/p2rook_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Queen"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP1Queen"/>
        <TextView
            android:id="@+id/p1queen_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Queen"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:onClick="setP2Queen"/>
        <TextView
            android:id="@+id/p2queen_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:gravity = "center"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Reset"
        android:textColor="#000000"
        android:textSize="24sp"
        android:onClick="reset"/>


</LinearLayout>